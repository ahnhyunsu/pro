#include<glut.h>
#include<gl/GLU.h>
#include<gl/GL.h>

 

void myDisplay();

 

int main(int ac, char** av) {

 

    glutInit(&ac, av);                                   //초기화
    glutInitDisplayMode(GLUT_RGB);            //RGB칼라 디스플레이모드
    glutCreateWindow("주전자");              //윈도우 생성
    glutDisplayFunc(myDisplay);                  //콜백함수 연결
    glutMainLoop();                                   //이벤트 대기 루프 돌입
}
void myDisplay() {
    glClearColor(1,1,1,1);                            //앞에 세 변수가 RGB입니다. 여기서는 빛의 삼원 색을 다 더한 흰색!
    glClear(GL_COLOR_BUFFER_BIT);         //화면의 RGB를  배경색으로 다 바꿔!

    glColor3f(0,0,0);                                   //사물의 색을 결정, 앞의 세 변수가 RGB이죠! 여기선 아무 색도 없어서 검은색!
    glutWireTeapot(0.5);                             //주전자 그리는 함수! 변수는 크기입니다.

    glFlush();                                           //그림 다 그렸다!
}
